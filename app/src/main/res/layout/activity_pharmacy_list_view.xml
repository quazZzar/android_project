<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pharmacy_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jacob.findmypharmacy.PharmacyListView">

    <include layout="@layout/pharmacy_lv_toolbar"
        android:id="@+id/pharmacy_lv_toolbar"
        style="@style/AppTheme" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:id="@+id/pharmListView"
        android:layout_below="@+id/pharmacy_lv_toolbar" />

</RelativeLayout>
