<?xml version="1.0" encoding="utf-8"?>
<Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/the_activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="18sp"
            tools:ignore="RelativeOverlap" />

        <ImageButton
            android:id="@+id/putPharmsOnTheMapBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:background="@drawable/rippler"
            android:contentDescription="@string/buttontoaddpins"
            android:onClick="sendBunledArList"
            android:src="@drawable/putpinsonmap" />
    </RelativeLayout>


</Toolbar>
